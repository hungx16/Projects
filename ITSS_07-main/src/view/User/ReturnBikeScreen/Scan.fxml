<AnchorPane prefHeight="400.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.User.ReturnBikeScreen.ScanController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
         <children>
            <VBox alignment="CENTER" prefHeight="131.0" prefWidth="380.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-background-radius: 7px; -fx-border-radius: 7px; -fx-border-width: 7px; -fx-border-color: #ffffff; -fx-effect: dropshadow(three-pass-box,  #a6a6a6, 10, 0, 0, 0);">
               <children>
                  <Label prefHeight="21.0" prefWidth="400.0" text="Please enter the barcode to return!">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="idField" prefHeight="51.0" prefWidth="340.0" promptText="Enter barcode...">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
                  <Button fx:id="scanButton" mnemonicParsing="false" onAction="#checkBikeID" prefHeight="39.0" prefWidth="453.0" style="-fx-background-color: blue;" text="Scan" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Label fx:id="errorMessage" alignment="TOP_LEFT" prefHeight="40.0" prefWidth="306.0" text="* Error:" textFill="#e40000" visible="false" wrapText="true">
                     <font>
                        <Font name="System Italic" size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
               <effect>
                  <Shadow />
               </effect>
            </VBox>
         </children>
      </VBox>
<!--      onMouseClicked="#backToMainScreen"-->

   </children>
</AnchorPane>
